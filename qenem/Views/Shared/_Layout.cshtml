@{
    var theme = Context.Request.Cookies["Theme"] ?? "light";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - qenem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/qenem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/anotacao.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body data-bs-theme="@theme">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">qenem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a href="@Url.Action("ToggleTheme", "Home")">
                                Alternar tema
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if(User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="AreaInteresse">√Årea de Interesse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ListarQuestoes" asp-action="Index">Quest√µes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Lista" asp-action="Index">Lista</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Simulado" asp-action="Index">Simulado</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex align-items-center">
            <span>&copy; 2025 - qenem</span>

            <div class="ms-auto">
                <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalContato">? Ajuda</button>
            </div>
        </div>
    </footer>
    <div class="modal fade" id="modalContato" tabindex="-1" aria-labelledby="modalContatoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalContatoLabel">Enviar Mensagem</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formContato" asp-controller="Ajuda" asp-action="Enviar" method="post">
                        @Html.AntiForgeryToken()

                        <div id="resultadoModal"></div>

                        <div id="form-fields-container">
                            <div class="mb-3">
                                <label for="campoEmail" class="form-label">Seu e-mail para contato</label>
                                <input type="email" id="campoEmail" name="Email" class="form-control" placeholder="seunome@example.com" />
                                <span id="validacaoEmail" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="campoMensagem" class="form-label">Sua Mensagem</label>
                                <textarea id="campoMensagem" name="Mensagem" class="form-control" rows="4" placeholder="Digite sua mensagem aqui..."></textarea>
                                <span id="validacaoMensagem" class="text-danger"></span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" id="btnEnviarEmail" class="btn btn-primary">Enviar</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ajuda-modal.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @* S√≥ renderiza se estiver autenticado *@
    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
        <div id="anotacoes-root">
            <button class="anotacoes-toggle" aria-expanded="false" title="Anota√ß√µes">
                <span style="font-size:14px; line-height:1;">üìù</span>
            </button>

            <div class="anotacoes-panel" role="region" aria-label="Anota√ß√µes do usu√°rio">
                <div class="header">
                    <button class="anotacoes-close" aria-label="Fechar" title="Fechar">‚úï</button>
                    <div class="anotacoes-saved" id="anotacoesSaved">Salvo ‚úì</div>
                </div>

                <div class="content">
                    <textarea class="anotacoes-textarea" placeholder="Escreva suas anota√ß√µes aqui..."></textarea>
                </div>

                <div class="footer">
                    <button class="anotacoes-save">Salvar</button>
                </div>
            </div>
        </div>

        <script src="~/js/anotacao.js" asp-append-version="true"></script>
        <link rel="stylesheet" href="~/css/anotacao.css" asp-append-version="true" />
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
