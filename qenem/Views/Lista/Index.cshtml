@model List<qenem.Models.Lista>
@{
    ViewData["Title"] = "Minhas Listas";
}

<div class="container mt-4">
    <h3>Suas listas</h3>

    @if (!Model.Any())
    {
        <p>Crie uma nova lista para começar.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var lista in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <!-- Nome da lista clicável -->
                    <a href="@Url.Action("Questoes", "Lista", new { id = lista.Id })" class="text-decoration-none fw-bold">
                        @lista.Nome
                    </a>

                    <!-- Botão excluir -->
                    <form method="post" asp-action="Excluir" asp-route-id="@lista.Id" onsubmit="return confirm('Excluir esta lista?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </li>
            }
        </ul>
    }
</div>